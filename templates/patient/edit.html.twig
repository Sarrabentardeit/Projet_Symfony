{% extends 'base.html.twig' %}

{% block body %}
    <style>
        /* Conteneur principal */
        .container {
            max-width: 600px;
            margin: 40px auto;
            border-radius: 8px;
        }

        /* Titre */
        h1 {
            font-family: Arial, sans-serif;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Champs du formulaire */
        form .form-group {
            margin-bottom: 20px;
        }

        form input,
        form select,
        form textarea {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-top: 5px;
        }

        form input:focus,
        form select:focus,
        form textarea:focus {
            border-color: #333;
            outline: none;
        }

        /* Boutons */
        .button-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }

        button[type="submit"],
        a.btn-back {
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            text-align: center;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button[type="submit"] {
            color: white;
            background-color: #333;
        }

        button[type="submit"]:hover {
            background-color: #555;
        }

        a.btn-back {
            color: white;
            background-color: #6c757d;
        }

        a.btn-back:hover {
            background-color: #5a6268;
        }

        /* Responsiveness */
        @media (max-width: 768px) {
            .button-container {
                flex-direction: column;
                gap: 10px;
            }

            button[type="submit"],
            a.btn-back {
                width: 100%;
            }
        }
    </style>

    <div class="container">
        <h1>Ajouter un Patient</h1>
        {{ form_start(form, {'attr': {'class': 'patient-form'}}) }}
        <div class="form-group">
            {{ form_widget(form) }}
        </div>
        <div class="button-container">
            <a href="{{ path('patient_index') }}" class="btn-back">Retour Ã  la liste</a>
            <button type="submit">Enregistrer</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
