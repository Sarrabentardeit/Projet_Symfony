{% extends 'base.html.twig' %}

{% block body %}
    <style>
        /* Style du conteneur principal */
        .container {
            max-width: 1000px;
            margin: 30px auto;
            border-radius: 8px;
        }

        /* Style pour le titre principal */
        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #000000;
            font-family: 'Arial', sans-serif;
        }

        /* Bouton pour ajouter un patient */
        a.btn-add {
            display: inline-block;
            margin-bottom: 20px;
            padding: 10px 15px;
            color: #fff;
            background-color: #000000;
            border-radius: 5px;
            font-size: 16px;
            text-decoration: none;
            text-align: center;
        }

        a.btn-add:hover {
            background-color: #333333;
        }

        /* Style pour le tableau */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        table th, table td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        table th {
            background-color: #000000;
            color: #fff;
            text-transform: uppercase;
            font-size: 14px;
        }

        table tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        table tr:hover {
            background-color: #f1f1f1;
        }

        /* Style des boutons dans la colonne actions */
        .actions a, .actions button {
            margin-right: 5px;
            padding: 5px 10px;
            font-size: 14px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            cursor: pointer;
            color: #fff;
        }

        .actions .btn-view {
            background-color: #28a745;
        }

        .actions .btn-edit {
            background-color: #ffc107;
        }

        .actions .btn-delete {
            background-color: #dc3545;
        }

        .actions .btn-view:hover {
            background-color: #218838;
        }

        .actions .btn-edit:hover {
            background-color: #e0a800;
        }

        .actions .btn-delete:hover {
            background-color: #c82333;
        }

        /* Boutons pour suppression dans le formulaire */
        button[type="submit"] {
            background: none;
            border: none;
            color: #fff;
            padding: 5px 10px;
            font-size: 14px;
            cursor: pointer;
            border-radius: 4px;
        }
    </style>

    <div class="container">
        <h1>Liste des Patients</h1>
        <a href="{{ path('patient_new') }}" class="btn-add">Ajouter un nouveau patient</a>
        <table>
            <thead>
            <tr>
                <th>Nom</th>
                <th>Date de Naissance</th>
                <th>Genre</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for patient in patients %}
                <tr>
                    <td>{{ patient.username }}</td>
                    <td>{{ patient.dob|date('d/m/Y') }}</td>
                    <td>{{ patient.gender }}</td>
                    <td>{{ patient.address }}</td>
                    <td>{{ patient.email }}</td>
                    <td class="actions">
                        <a href="{{ path('patient_show', { 'id': patient.id }) }}" class="btn-view">Voir</a>
                        <a href="{{ path('patient_edit', { 'id': patient.id }) }}" class="btn-edit">Modifier</a>
                        <form method="post" action="{{ path('patient_delete', { 'id': patient.id }) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce patientÂ ?');" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ patient.id) }}">
                            <button type="submit" class="btn-delete">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
